@model IEnumerable<MVCWardrobeProject.Top>

@{
    ViewBag.Title = "Index";
}
<link href="~/TopsIndex.css" rel="stylesheet" />
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<head>
    <meta name="viewport" content="width=device-width">
</head>


@*<div class="wrap">*@
    <nav>
        <ul class="primary"style="display:flex; justify-content:center; margin-top:30%" >
            @foreach (var item in Model)
            {
                <li>
                    <a href="">@Html.DisplayFor(modelItem => item.TopName)</a>
                    <ul class="sub">
                        <li><a href="">
    @Html.DisplayNameFor(model => model.TopColor)
:
    @Html.DisplayFor(modelItem => item.TopColor)
</a></li>
                        <li><a href="">
